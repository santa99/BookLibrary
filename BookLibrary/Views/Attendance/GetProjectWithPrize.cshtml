@using Attendance.DataAccess.Dtos
<!DOCTYPE html>
<html>
<head>
    <title>@ViewData["appTitle"]</title>
    <meta charset="utf-8"/>
    <link href="~/StyleSheet.css" rel="stylesheet"/>
</head>
<body>
<div class="page-content">
    <h1>Project and prize</h1>
    
    <p>
        @Html.ActionLink("All Reports", "Index", "Attendance")
    </p>
    
    @{
        List<(string ProjectName, decimal TotalPrize, double TotalTime)>? reports = (List<(string ProjectName, decimal TotalPrize, double TotalTime)>?)ViewData["reports"];
    }
    <div class="box float-left w-50">
        <table class="table w-100">
            <thead>
            <td>Project</td>
            <td>Total money spent</td>
            <td>Time spent hours</td>
            </thead>
            <tbody>
            @foreach ((string ProjectName, int TotalPrize, double TotalTime) report in reports)
            {
                <tr>
                    <td>@report.ProjectName</td>
                    <td>@report.TotalPrize</td>
                    <td>@report.TotalTime</td>
                </tr>
            }
            </tbody>
        </table>
    </div>

</div>


</body>
</html>