@using View.Services
@inherits LayoutComponentBase

@inject LoginService LoginService;

<div class="page">
    <div class="sidebar">
        <NavMenu/>
    </div>

    <main>
        <div class="top-row px-4">
            @if (@_loginResModel != null)
            {
                @_loginResModel.Username
                <a href="" @onclick="Logout">LogOut</a>
            }
            else
            {
                <a href="" @onclick="LoginService.ShowLoginDialog">Sign In</a>
            }
        </div>
        <article class="content px-4">
            @Body
        </article>
    </main>
</div>

@if (LoginService.ShowUserLoginDialog)
{
    <LoginDialog OnCancel="LoginCancel" Login="Login" />
}

<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">ðŸ—™</a>
</div>

@code {
    LoginResModel _loginResModel { get; set; }
    
    protected void Login(LoginResModel loginResModel)
    {
        _loginResModel = loginResModel;
        
        LoginService.CloseLoginDialog();
    }

    private async Task Logout()
    {
        await LoginService.LogUserOut();
        
        _loginResModel = null;
    }

    protected void LoginCancel()
    {
        LoginService.CloseLoginDialog();
    }
}

